<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/employee_profile_list_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:layout_toRightOf="@id/employee_profile_list_item"
        android:layout_toLeftOf="@id/delete_employee_salary_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hoten_detete_textview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="@dimen/normal_text"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="Hưng"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/chuyenmon_delete_textview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Organ, Âm thanh ánh sáng"
            android:maxLines="1"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <EditText
        android:id="@+id/delete_employee_salary_edit_text"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/delete_employee_button"
        android:inputType="number"
        android:gravity="center_vertical"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/delete_employee_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_add"
        android:src="@drawable/ic_delete" />
</RelativeLayout>