<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/delete_employee_list_item_employee_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/delete_employee_list_item_employee_profile"
        android:layout_toLeftOf="@id/delete_employee_list_item_delete_button"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete_employee_list_item_employee_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/info_list_item"
            android:textStyle="bold"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/delete_employee_list_item_employee_speciality"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/info_list_item"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_employee_list_item_delete_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete" />
</RelativeLayout>